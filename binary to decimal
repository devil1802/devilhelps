#include<stdio.h>
#include<conio.h>
#include<math.h>
void main()
{
long int bnum;
long int decnum=0,i=0,d;
clrscr();
printf("\nEnter the binary number : ");
scanf("%ld",&bnum);
while(bnum!=0)
{
d=bnum%10;
decnum=decnum+d*pow(2,i);
bnum=bnum/10;
i++;
}
printf("\nThe equivalent decimal number is : %ld",decnum);
getch();
}
